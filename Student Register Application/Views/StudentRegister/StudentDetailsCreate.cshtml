@model DataAccessLayer.StudentDetails

@{
    ViewData["Title"] = "StudentDetailsCreate";
}
@if (TempData["SuccessMessage"] != null)
{
    <script>

                 alert('@TempData["SuccessMessage"]');

    </script>
}

<h1>StudentDetailsCreate</h1>

<h4>StudentDetails</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.DOB)
                @Html.EditorFor(model => model.DOB, new { htmlAttributes = new { @class = "glyphicon glyphicon-calendar" } })
                @Html.ValidationMessageFor(model => model.DOB, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Age)
                @Html.DisplayFor(model => model.Age, new { @class = "form-control", @readonly = "readonly" })
            </div>
            <div class="form-group">
                <label asp-for="Gender" class="control-label"></label>
                <div class="col-md-10">
                    <label class="radio-inline">@Html.RadioButtonFor(model => model.Gender, "Male") Male</label>
                    <label class="radio-inline">@Html.RadioButtonFor(model => model.Gender, "Female") Female</label>
                </div>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SubjectId" class="control-label"></label>
                <select asp-for="SubjectId" class="form-control" asp-items="@(new SelectList(Model.Subject,"SubjectId","SubjectName"))">
                    <option value="0">--Select--</option>
                </select>
                <span asp-validation-for="SubjectId" class="text-danger"></span>

            </div>
            <div class="form-group">
                <input id="save" type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

